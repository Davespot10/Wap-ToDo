<body>

    <div id="outer" class="aa">


        <div id="leftbar">
            <a href="homepage">
                <h3 id="task">TASK</h3>
            </a>

            <a href="addtask">
                <div id="todolist">
                    <i class="bi bi-file-earmark-plus-fill" style="font-size: 50px;"></i>
                    <p>Add New Task</p>
                </div>
            </a>
            <a href="alltask">
                <div id="todolist">
                    <i class="bi bi-list-task" style="font-size: 50px;"></i>
                    <p>All Tasks</p>
                </div>
            </a>
            <a href="pendingtask">


                <div id="pending">
                    <i style="font-size: 50px;" class="bi bi-alarm-fill"></i>
                    <p>Task Pending</p>
                </div>
            </a>
            <a href="complatedtask">
                <div id="complated">
                    <i style="font-size: 50px;" class="bi bi-check2-circle"></i>
                    <p>Task Complated</p>
                </div>
            </a>
            <a href="deletedtask">
                <div id="deleted">
                    <i style="font-size: 50px;" class="bi bi-trash3-fill"></i>
                    <p>Task deleted</p>
                </div>
            </a>
            <div id="space">

            </div>
        </div>
        <div id="middle">
            <form class="container">

                <div class="row height ">

                    <div class="col-md-12">

                        <div class="search">
                            <i class="fa fa-search"></i>
                            <input type="text" class="form-control" placeholder="Search Your Task Here">
                            <button class="btn btn-primary">Search</button>
                        </div>

                    </div>

                </div>

            </form>
            <br>
            <br>


            <div id="middlebody">

                <h2 style="text-align: center;padding: 40px;"> <i><b>Wellcome to TODO APP</b></i> </h2>
                <div id="addtask">
                    <a href="addtask"><i style="font-size: 200px;text-align: center;"
                            class="bi bi-plus-circle-fill"></i></a>
                    <br>
                    <label for="">Click Here </label><i class="bi bi-arrow-up"></i><label for="">to add Your
                        Task</label>

                </div>




            </div>

        </div>
        <div id="username">
            <h4>WellCome User</h4>
        </div>
        <form action="/postLogout" method="POST">
            <button id="logout">Logout</button>
        </form>
        <div id="accountphoto">

            <i style="font-size: 50px;" class="bi bi-person-circle"></i>
        </div>




    </div>

